{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "dist/types",
        "sourceMap": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "dist"
    ]
}